{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "html-tag-jsx"
  },
  "exclude": [
    "./dist/**/*",
    "./postcss.config.js"
  ],
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src/**/*.js"
  ]
}